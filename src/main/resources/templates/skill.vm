<script>
    function submitLearn(repoName) {
        jQuery.post("/repository/learn",
                {
                    repoName:repoName,
                },
                function(data,status){
                    if(data==true)
                            location.reload();
                });
    }

    function submitReport(repoName) {
        jQuery.post("/repository/report",
                {
                    repoName:repoName,
                },
                function(data,status){
                    console.log(data,status);
                    if(data==true)
                        location.reload();
                });

    }

    function levelUp(skillName) {
        jQuery.post("/skill/levelup",
                {
                    skillName:skillName
                },
                function(data,status){
                    if(data==true)
                        location.href = "/skill/$skill.name/$nextLevel";
                });

    }
</script>

</body>
