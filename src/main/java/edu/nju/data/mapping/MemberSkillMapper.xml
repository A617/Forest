<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.nju.data.dao.mapper.MemberSkillMapper">
  <resultMap id="BaseResultMap" type="edu.nju.data.model.MemberSkill">
    <id column="username" jdbcType="VARCHAR" property="username" />
    <id column="skill_name" jdbcType="VARCHAR" property="skillName" />
    <id column="level" jdbcType="INTEGER" property="level" />
    <id column="time" jdbcType="TIMESTAMP" property="time" />
  </resultMap>
  <update id="updateLevel" parameterType="java.lang.String">
    update member_skill
    set level = level+1,
         time = #{3}
    where username = #{2} and skill_name = #{1}
  </update>
</mapper>